@page "/featured-talent"

@rendermode InteractiveServer
<section class="section featured-section">
    <div class="container">
        <h2 class="section-title fadeInUp">Meet Our Featured Talent</h2>
        <div class="row">
            @foreach (var photographer in Photographers)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="card h-100 fadeInUp">
                        <img src="@photographer.ImageUrl" class="card-img-top" alt="@photographer.Name" />
                        <div class="card-body">
                            <h5 class="card-title">@photographer.Name</h5>
                            <p class="card-text">@photographer.Niche</p>
                            <a href="/Photographers2/@photographer.Id" class="btn btn-primary">View Profile</a>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<style>
    :root {
        --accent: #AF8B65;
        --bg-light: #F7ECE1;
        --text-dark: #3F2A0E;
        --text-muted: #9D7967;
        --card-bg: rgba(247, 236, 225, 0.8);
        --glass-border: rgba(175, 139, 101, 0.3);
        --transition: all 0.3s ease;
    }

    .container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 0 1.5rem;
    }

    .section-title {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 2rem;
        color: var(--text-dark);
        position: relative;
        padding-bottom: 0.5rem;
    }

    .section-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 60px;
        height: 4px;
        background: var(--accent);
        border-radius: 2px;
    }

    .card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        background: var(--card-bg);
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
        transition: transform 0.4s ease, box-shadow 0.4s ease;
        height: 100%;
    }

    .card:hover {
        transform: translateY(-10px);
        box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
    }

    .card-img-top {
        height: 220px;
        object-fit: cover;
        transition: transform 0.4s ease;
    }

    .card:hover .card-img-top {
        transform: scale(1.05);
    }

    .card-body {
        padding: 1.5rem;
    }

    .card-title {
        font-size: 1.25rem;
        font-weight: 600;
        margin-bottom: 0.75rem;
        color: var(--text-dark);
    }

    .card-text {
        color: var(--text-muted);
        margin-bottom: 1rem;
    }

    .btn {
        font-weight: 500;
        padding: 0.75rem 1.5rem;
        border-radius: 10px;
        transition: var(--transition);
        box-shadow: 0 1px 2px rgba(0, 0, 0, 0.05);
        text-transform: none;
        font-size: 1rem;
    }

    .btn-primary {
        background: var(--accent);
        border: none;
        color: var(--text-dark);
        border-radius: 50px;
    }

    .btn-primary:hover {
        background: var(--text-muted);
        transform: translateY(-2px);
        box-shadow: 0 4px 15px rgba(175, 139, 101, 0.4);
    }

    .section {
        padding: 4rem 0;
    }

    .featured-section {
        background: var(--bg-light);
    }

    .fadeInUp {
        animation: fadeInUp 0.6s ease-out forwards;
    }

    @@keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
</style>

@code {
    [Parameter]
    public List<Photographer> Photographers { get; set; } = new();

    public class Photographer
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Niche { get; set; } = "";
        public string ImageUrl { get; set; } = "";
    }
}